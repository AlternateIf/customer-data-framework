<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
		<plugin>

            <!-- the plugin name [A-Za-z_] -->
            <pluginName>CustomerManagementFramework</pluginName>

            <!-- a short description -->
			<pluginDescription><![CDATA[]]></pluginDescription>

            <!-- meta data -->
            <pluginVersion>1.0</pluginVersion>
            <pluginRevision>1</pluginRevision>
            <pluginBuildTimestamp>0</pluginBuildTimestamp>

            <!-- put in the URL for the plugin configuration eg. /plugin/CustomerManagementFramework/admin/index -->
            <pluginIframeSrc></pluginIframeSrc>

            <!-- className of the plugin which extends Pimcore_API_Plugin_Abstract-->
			<pluginClassName>\CustomerManagementFramework\Plugin</pluginClassName>

            <!-- include paths relative to plugin-directory -->
			<pluginIncludePaths>
				<path>/CustomerManagementFramework/lib</path>
				<path>/CustomerManagementFramework/models</path>
			</pluginIncludePaths>

			<!-- namespaces to register with autoloader-->
			<pluginNamespaces>
				<namespace>CustomerManagementFramework</namespace>
			</pluginNamespaces>

			<!-- js files with path relative to plugin-directory -->
			<pluginJsPaths>
                <path>/plugins/CustomerManagementFramework/static/js/startup.js</path>
                <path>/plugins/CustomerManagementFramework/static/js/ActivityView.js</path>
                <path>/plugins/CustomerManagementFramework/static/js/CustomerView.js</path>
			</pluginJsPaths>

			<pluginCssPaths>
				<path>/plugins/CustomerManagementFramework/static/css/pimcore.css</path>
			</pluginCssPaths>

		</plugin>
</zend-config>
